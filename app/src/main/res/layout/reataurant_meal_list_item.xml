<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meal_list_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


<!--    <ImageView-->
<!--        android:id="@+id/meal_image"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@mipmap/ic_launcher" />-->

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/meal_image"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/meal_image"
        android:textColor="#000"
        android:textSize="24sp"
        tools:text="Proin commodo" />

    <TextView
        android:id="@+id/meal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$15"
        android:textSize="18sp"
        android:layout_below="@id/meal_name"
        android:layout_toRightOf="@id/meal_image"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_description"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/meal_image"
        android:layout_below="@id/meal_price" />


</RelativeLayout>